extends layout

block content

  h2 Genre: #{genre.name}
  
  div(style='margin-left:20px;margin-top:20px')

    h3 Books
    
    dl
      each book in genre_books
        dt
          h4 
            a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p This genre has no books. You may delete it...

  hr
  p
    a(href=genre.url + '/delete') Delete this genre
  p
    a(href=genre.url + '/update') Update this genre
